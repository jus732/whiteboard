<div class="container-fluid">
  <div class="row">
    <div class="col-4 mt-5 ml-5 border border-dark rounded bg-primary">
      <!-- <button type="button" class="btn btn-primary border ml-1" id="login">Login/Register</button> -->
      <h2 class="text-light text-center my-2">My Notes</h2>
      <nav class="navbar navbar-expand-sm navbar-light bg-light border border-dark">
        <form class="form-inline mx-auto">
          <input class="form-control" type="search" placeholder="Search" name="titleSearch" aria-label="Search Boards">
          <button class="btn btn-outline-success ml-2" type="submit">Search</button>
        </form>
      </nav>
      <div class="mt-3">
        <!-- board image does not display correctly - ran into issues dealing with the base64 format -->
        {{#each boards}}
          <div class="border border-dark my-2">
            <h3 class="text-light text-center"><u>{{notes.title}}</u></h3>
            <p class="text-center">Created: {{createdAt}}</p>
            <p class="text-center">{{notes.noteBody}}</p>
          </div>
          {{/each}}
      </div>
    </div>
    <div class="col-7 mt-5 ml-5 ">
      <h1 class="display-2 text-primary">This is Whiteboard</h1>
      <h3 class="text-secondary">On this page, you can save some notes about whatever you feel like. And search them by title!</h3>
      <h3 class="text-secondary">Click on the Draw link in the navbar to draw in real time with friends!</h3>
    </div>
  </div>
</div>

<div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Save Board</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label>Title of your Drawing</label>
            <input type="text" class="form-control" id="board-title" placeholder="Enter title" value="">
          </div>
          <div class="form-group">
            <label>Notes</label>
            <textarea class="form-control" id="board-notes" placeholder="Enter notes" value=""></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="save-btn">Login</button>
      </div>
    </div>
  </div>
</div>
